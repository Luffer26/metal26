                                    textarea(placeholder="Сообщение" name="message")
                            .contacts__form-btn
                                input(type="submit")
                .contacts__map
                    iframe(src="https://yandex.ru/map-widget/v1/?um=constructor%3A6c524c668eb02e824e45746c5090531a13d223e4899ab33a5d555dfa3e4ebf78&amp;source=constructor" width="100%" height="350" frameborder="0")
